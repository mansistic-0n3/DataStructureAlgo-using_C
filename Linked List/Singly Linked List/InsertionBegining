#include<stdio.h>
#include<stdlib.h>

struct node{
    int data;
    struct node *next;
};

int main(){
    int choice = 1;
    struct node *newnode, *start=NULL, *temp;
    while(choice){
        newnode = (struct node*) malloc (sizeof(struct node));
        printf("Enter data : ");
        scanf("%d", &newnode -> data);
        newnode -> next=NULL;
        
        //At Beginning
        if(start==NULL){
            start = newnode;
        }else{
            newnode -> next = start;
            start = newnode;
        }
     printf("Do you want to add more nodes(1/0): ");
     scanf("%d", &choice);
    }
    
     //display
     temp = start;
     while(temp != NULL){
         printf("Data is %d \n", temp->data);
        temp=temp->next;
    }
}

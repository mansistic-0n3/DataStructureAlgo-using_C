// Create a menu-driven program to implement following operations on
// stack using Arrays:
// (a) Push
// (b) Pop
// (c) Peek
// (d)Display

#include<stdio.h>
int stack[5];
int top=-1;
void push(){
 int x;
 printf("Enter data:");
 scanf("%d",&x);
 
 top=top+1;
 stack[top]=x;
}
void pop(){
 int item;
 item=stack[top];
 top=top-1;
 printf("Deleted item is: %d \n", item);
}
void peek(){
 printf("Topemost element is: %d \n",stack[top]);
}
void display(){
 for(int i=top;i>=0;i--){
 printf("Data is: %d \n",stack[i]);
 
 }
}
int main(){
 int n;
 while(1){
 printf("Enter the case you want to choose \n");
 printf("1. Push \n2. Pop \n3. Peek \n4. Display \n5. Exit \n");
 scanf("%d",&n);
 switch(n){
 case 1:
 push();
 break;
 case 2:
 pop();
 break;
 case 3:
 peek();
 break;
 case 4:
 display();
 break;
 case 5:
 exit(0);
 default:
 printf("Invalid Choice");
 }
 }
 return 0;
}
